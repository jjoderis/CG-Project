{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                ".."
            ]
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "./build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": [
                "CMake"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "./${workspaceFolderBasename}",
            "dependsOn": [
                "Make"
            ],
            "problemMatcher": []
        },
    ]
}